<script>
    function alerta() {
        $('#form')[0].reset();
        $('.form-group').removeClass('has-error');
        $('.help-block').empty();
        $('#modal_usuarios').modal('show');
        $('.modal-title').text('Olvidó su contraseña');
    }
    function conectar() {
        $.ajax({
            url: "/login",
            data: $('#formulario').serialize(),
            type: "POST",
            dataType: "JSON",
            success: function (data) {
                if (data.status) {
                    //alert(data.token);
                    //	window.location.replace("principal?id="+data.id_usuario); //principal?=1
                    window.location.replace("/usuarios"); //principal?=1
                } else {
                    //	alert(data.message);
                    document.getElementById('error').innerHTML = "<h5 style='color:white;'>" + data.message + "</h5>"
                    confirm(data.message);
                    $('#alerta').toggle();
                }
            },
            error: function (data) {
                alert('error');
                document.getElementById('error').innerHTML = "Error"
                $('#alerta').toggle();
            }
        });
    }

    function enviar() {
        $.ajax({
            url: "/enviar_pass",
            data: $('#form').serialize(),
            type: "POST",
            dataType: "JSON",
            success: function (data) {
                if (data.status) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                    location.reload();
                }
            },
            error: function (data) {
                alert('error');
                document.getElementById('error').innerHTML = "Error"
                $('#alerta').toggle();
            }
        });
    }

</script>